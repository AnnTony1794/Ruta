<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.anntony.myapplication.Views.NoticiaActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorAccent">
        <ImageView
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/dataImagen"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1/10/10"
            android:layout_margin="10dp"
            android:gravity="end"
            android:id="@+id/dataFecha"/>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre de la noticia"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:id="@+id/dataNombre"/>

    <TextView
        android:id="@+id/dataContenido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:text="ajsdlaksdjaslkdjaslkdjaslkdjalskdja asdjkal skjasdl kjaslk jalksdj laksdj lask"/>



</LinearLayout>
